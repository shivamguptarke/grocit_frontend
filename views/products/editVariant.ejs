<%- include('header') -%> 
        <!-- Layout container -->
        <div class="layout-page">
          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Variant /</span> Edit Variant</h4>

              <div class="card mb-4">
                <h5 class="card-header">Profile Details</h5>
                <!-- Account -->
                <hr class="my-0">
                <div class="card-body">
                  <form id="formAccountSettings" method="POST" onsubmit="editVariant" enctype="multipart/form-data">
                    <div class="card-body">
                      <div class="d-flex align-items-start align-items-sm-center gap-4">
                        <div class="productImage" width="100" height="100" id="productImage"></div>
                        <div class="button-wrapper">
                          <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                            <span class="d-none d-sm-block">Upload new variant image</span>
                            <i class="bx bx-upload d-block d-sm-none"></i>
                            <input type="file" id="upload" class="account-file-input" name="productImage" accept="image/png, image/jpeg" multiple>
                          </label>
                          <button type="button" class="btn btn-outline-secondary account-image-reset mb-4">
                            <i class="bx bx-reset d-block d-sm-none"></i>
                            <span class="d-none d-sm-block">Reset</span>
                          </button>
    
                          <p class="text-muted mb-0">Allowed JPG, GIF or PNG. Max size of 800K</p>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="mb-3 col-md-6">
                        <label for="packagingSize" class="form-label">Product Name</label>
                        <input class="form-control" type="text" value="<%- product.name %>" autofocus="" disabled>
                      </div>
                        <input class="form-control" type="text" name="productid" id="productid" value="<%- product._id %>" autofocus="" hidden>
                        <input class="form-control" type="text" name="variantid" id="variantid" value="<%- variant._id %>" autofocus="" hidden>
                      <div class="mb-3 col-md-6">
                        <label for="packagingSize" class="form-label">Packaging Size</label>
                        <input class="form-control" type="text" id="packagingSize" name="packagingSize" value="<%- variant.packagingSize %>" autofocus="" required>
                      </div>
                      <div class="mb-3 col-md-6">
                        <label for="name" class="form-label">Quantity</label>
                        <input class="form-control" type="text" id="quantity" name="quantity" value="<%- variant.quantity %>" autofocus="">
                      </div>
                      <div class="mb-3 col-md-6">
                        <label class="form-label" for="phoneNumber">MRP</label>
                        <div class="input-group input-group-merge">
                          <span class="input-group-text">Rs</span>
                          <input type="text" id="price" name="price" class="form-control" value="<%- variant.mrp %>" required>
                        </div>
                      </div>
                      <div class="mb-3 col-md-6">
                        <label class="form-label" for="phoneNumber">Discounted Price</label>
                        <div class="input-group input-group-merge">
                          <span class="input-group-text">Rs</span>
                          <input type="text" id="dprice" name="dprice" class="form-control" value="<%- variant.dprice %>" required>
                        </div>
                      </div>
                      <div class="mb-3 col-md-6">
                        <label for="firstName" class="form-label">Description</label>
                        <input class="form-control" type="text" id="description" name="description" value="<%- variant.description %>" autofocus="">
                      </div>
                      <div class="form-check" style="margin: 2% 1%;">
                        <% var checkBool = 0 %>
                        <% if (variant.status) { %>
                          <% checkBool = 1 ; %>
                        <% } %>
                        <input class="form-check-input" type="checkbox" value="<%-checkBool%>" id="status" checked="" name="status">
                        <label class="form-check-label" for="status">Visible </label>
                      </div>
                    </div>
                    <div class="mt-2">
                      <button type="submit" class="btn btn-primary me-2">Update Variant</button>
                      <button type="reset" class="btn btn-outline-secondary" onclick="window.history.back()">Cancel</button>
                    </div>
                  </form>
                </div>
                <!-- /Account -->
              </div>

            <!-- / Content -->
      
            
    

<%- include('footer') -%>
        