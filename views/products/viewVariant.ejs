<%- include('header') -%> 
        <!-- Layout container -->
        <div class="layout-page">
          
          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Variant /</span> View Variant Details</h4>

                <div class="row mb-5">
                  <% for( let index = 0; index < variant.imageName.length; index++ ) { %>
                  <div class="col-md-6 col-lg-4">
                      <div class="card mb-4">
                        <img class="card-img-top" src="/uploads/<%- variant.imageName[index] %> " alt="Card image cap">
                        <div class="card-body">
                          <p class="card-text">
                            <%- variant.imageName[index] %> 
                          </p>
                        </div>
                      </div>
                  </div>
                  <% } %>
                </div>

              <div class="card">
                <h5 class="card-header">Details</h5>
                <div class="table-responsive text-nowrap">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Field</th>
                        <th>Values</th>
                      </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>Product Name</strong></td>
                        <td><%- product.name %> </td>
                      </tr>
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>Packaging Size</strong></td>
                        <td><%- variant.packagingSize %></td>
                      </tr>
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>Quantity</strong></td>
                        <td><%- variant.quantity %></td>
                      </tr>
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>MRP</strong></td>
                        <td>₹ <%- variant.mrp %></td>
                      </tr>
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>Discounted Price</strong></td>
                        <td>₹ <%- variant.dprice %></td>
                      </tr>
                      <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>Status</strong></td>
                        <td><%- variant.status %></td>
                      </tr>
                      
                    </tbody>
                  </table>
                </div>
              </div>

            </div>
            <!-- / Content -->

            
<%- include('footer') -%>
        